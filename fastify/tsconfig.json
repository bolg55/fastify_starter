{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "types": ["node"],
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "lib": ["ESNext"],
    "outDir": "dist",
    "paths": {
      "@api/*": ["api/*"],
      "@config/*": ["config/*"],
      "@libs/*": ["libs/*"],
      "@middleware/*": ["middleware/*"],
      "@plugins/*": ["plugins/*"],
      "@utils/*": ["utils/*"],
      "@db/*": ["db/*"],
      "@types/*": ["types/*"]
    }
  },
  "include": ["src/**/*", "custom.d.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
